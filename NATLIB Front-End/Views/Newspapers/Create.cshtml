@section scripts
{
    <script>
        $(document).ready(function () {
            var token = sessionStorage.getItem('tokenKey');
            var headers = {};
            if (token) {
                headers.Authorization = 'Bearer ' + token;
            }

            $('#submit-add-newspaper-form').on('click', function () {
                var formData = $('#add-new-newspaper').serializeArray();
                $.ajax({
                    type: "POST",
                    url: "http://localhost:64110/api/newspapers",
                    headers: headers,
                    data: formData,
                    success: function () {
                        alert("The newspaper was submitted.");
                    },
                    error: function (xhr) {
                        alert("Something went wrong. " + xhr.responseText);
                    }
                });
            });
        });
    </script>
}

