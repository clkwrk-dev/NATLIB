@section scripts
{
    <script>

        $(document).ready(function () {
            var token = sessionStorage.getItem('tokenKey');
            var headers = {};
            if (token) {
                headers.Authorization = 'Bearer ' + token;
            }
        
            var getUrlParameter = function getUrlParameter(sParam) {
                var sPageURL = window.location.search.substring(1),
                    sURLVariables = sPageURL.split('&'),
                    sParameterName,
                    i;

                for (i = 0; i < sURLVariables.length; i++) {
                    sParameterName = sURLVariables[i].split('=');

                    if (sParameterName[0] === sParam) {
                        return sParameterName[1] === undefined ? true : decodeURIComponent(sParameterName[1]);
                    }
                }
            };

            $.ajax({
                type: "GET",
                url: "http://localhost:64110/api/books/" + getUrlParameter("id"),
                headers: headers,
                dataType: 'json',
                success: function (data) {
                    $('#Id').val(data.Id);
                    $('#title').val(data.Title);
                    $('#author').val(data.Author);
                    $('#date-dublished').val(data.DatePublished);
                    $('#number-of-pages').val(data.NumberOfPages);
                    $('#Genre').val(data.Genre);
                    $('#ISBN').val(data.ISBN);
                    $('#Edition').val(data.Edition);
                    $('#Language').val(data.Language);
                    $('#Publisher').val(data.Publisher);
                    $('#Image').val(data.Image);
                    $('#Availability').val(data.Availability);
                    $('#Summary').val(data.Summary);
                },
                error: function (xhr) {
                    alert("Something went wrong. " + xhr.responseText);
                }
            });

            $('#submit-edit-book-form').on('click', function () {
                var formData = $('#edit-book').serializeArray();
                $.ajax({
                    type: "PUT",
                    url: "http://localhost:64110/api/books/" + getUrlParameter("id"),
                    headers: headers,
                    data: formData,
                    success: function () {
                        alert("The book was updated.");
                    },
                    error: function (xhr) {
                        alert("Something went wrong. " + xhr.responseText);
                    }
                });
            });
        });
    </script>
}